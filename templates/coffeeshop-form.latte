                        <input type="number" name="3-from" id="3-from" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 3} value="{$oh['time_from']}" {/if} {/foreach}>
                  </div>
                  <div class="pair">
                        <label for="3-to">To: </label>
                        <input type="number" name="3-to" id="3-to" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 3} value="{$oh['time_to']}" {/if} {/foreach}>
                  </div>
            </div>
      </div>

      <div class="day">
            <p>Thursday</p>
            <div class="opening-time">
                  <div class="pair">
                        <label for="4-from">From: </label>
                        <input type="number" name="4-from" id="4-from" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 4} value="{$oh['time_from']}" {/if} {/foreach}>
                  </div>
                  <div class="pair">
                        <label for="4-to">To: </label>
                        <input type="number" name="4-to" id="4-to" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 4} value="{$oh['time_to']}" {/if} {/foreach}>
                  </div>
            </div>
      </div>

      <div class="day">
            <p>Friday</p>
            <div class="opening-time">
                  <div class="pair">
                        <label for="5-from">From: </label>
                        <input type="number" name="5-from" id="5-from" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 5} value="{$oh['time_from']}" {/if} {/foreach}>
