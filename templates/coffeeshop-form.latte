{if isset ($message)}
    <div class="alert" role="alert">{$message}</div>
{/if}

<h1>{$title}</h1>   
   <form method="post" class="form">

   <label for="name"> Name </label>
      <input type="text" name="name" id="name" placeholder="Name" value="{$coffeeshop['name']}" autofocus  required>

   <label for="address"> Address </label>
      <input type="text" name="address" id="address" placeholder="Street, Number, ZIP" value="{$coffeeshop['address']}">

   <label for="city"> City </label>
      <input type="text" name="city" id="city" placeholder="City" value="{$coffeeshop['city']}">
   
   <label for="file"> Photo </label>
      <input type="file" name="file" id="file">

      <h4>Openning hours
      </h4>
      <div class="day">
            <p>Monday</p>
            <div class="opening-time">
                
                  <div class="pair">
                        <label for="1-from">From: </label>
                        <input type="number" name="1-from" id="1-from" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 1} value="{$oh['time_from']}"{/if} {/foreach}>
                  </div>
                  <div class="pair">
                        <label for="1-to">To: </label>
                        <input type="number" name="1-to" id="1-to" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 1} value="{$oh['time_to']}" {/if} {/foreach}>
                  </div>
            </div>
      </div>

      <div class="day">
            <p>Tuesday</p>
            <div class="opening-time">
                  <div class="pair">
                        <label for="2-from">From: </label>
                        <input type="number" name="2-from" id="2-from" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 2} value="{$oh['time_from']}" {/if} {/foreach}>
                  </div>
                  <div class="pair">
                        <label for="2-to">To: </label>
                        <input type="number" name="2-to" id="2-to" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 2} value="{$oh['time_to']}" {/if} {/foreach}>
                  </div>
            </div>
      </div>

