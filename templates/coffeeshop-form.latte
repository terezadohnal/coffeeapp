      <div class="day">
            <p>Saturday</p>
            <div class="opening-time">
                  <div class="pair">
                        <label for="6-from">From: </label>
                        <input type="number" name="6-from" id="6-from" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 6} value="{$oh['time_from']}" {/if} {/foreach}>
                  </div>
                  <div class="pair">
                        <label for="6-to">To: </label>
                        <input type="number" name="6-to" id="6-to" min="0" max="24" {foreach $opening_hours as $oh} {if $oh['day'] == 6} value="{$oh['time_to']}" {/if} {/foreach}>
